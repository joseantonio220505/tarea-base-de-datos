<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Books</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Books</h1>
  <a href="/books/new">Add New Book</a>
  <ul>
    <% books.forEach(book => { %>
      <li>
        <a href="/books/<%= book._id %>"><%= book.title %></a>
        <form action="/books/<%= book._id %>?_method=DELETE" method="POST"> <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>